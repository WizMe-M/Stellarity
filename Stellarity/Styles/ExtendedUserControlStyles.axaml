<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:basic="clr-namespace:Stellarity.Basic">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector=":is(basic|ExtUserControl)">
        <!-- DO NOT REMOVE - otherwise throws InvalidCastException on DataContext setting -->
        <!-- cause of it: cast from inherited DataContext from parent -->
        <Setter Property="DataContext" Value="{x:Null}" />
        <!-- DO NOT REMOVE -->
        
        <Setter Property="Background" Value="Transparent" />
    </Style>
</Styles>
