<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:basic="clr-namespace:Stellarity.Basic"
             x:Class="Stellarity.App">
    <Application.DataTemplates>
        <basic:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/UserControls/Styles and resources/HamburgerResources.axaml" />
                <ResourceInclude Source="/Assets/Icons.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Dark" />
        <StyleInclude Source="avares://Aura.UI.FluentTheme/AuraUI.xaml"/>
        <StyleInclude Source="/UserControls/Styles and resources/HamburgerItemStyles.axaml" />
        <StyleInclude Source="/UserControls/Styles and resources/HamburgerMenuStyles.axaml" />
        <StyleInclude Source="/UserControls/Styles and resources/LineSeparatorStyles.axaml" />
        <StyleInclude Source="/UserControls/Styles and resources/NavigationViewItem.axaml" />
    </Application.Styles>
</Application>