<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:templatedControls="clr-namespace:Stellarity.Desktop.TemplatedControls">
    <Design.PreviewWith>
        <Border Background="White" Padding="10">
            <UniformGrid>
                <templatedControls:ImageButton Width="200" Height="200" ImageSource="avares://Stellarity.Avalonia/Assets/Images/placeholder.png"
                                      Margin="5" />
                <templatedControls:ImageButton Width="200" Height="200" ImageSource="avares://Stellarity.Avalonia/Assets/Images/placeholder.png"
                                      Margin="5" IsEnabled="False" />
                <templatedControls:ImageButton Width="200" Height="100" ImageSource="avares://Stellarity.Avalonia/Assets/Images/placeholder.png"
                                      Margin="5" Stretch="Fill" />
                <templatedControls:ImageButton Width="200" Height="200" ImageSource="avares://Stellarity.Avalonia/Assets/Images/stellaris-logo.ico"
                                      Margin="5" />

                <Button Width="200" Height="200" CornerRadius="10">
                    <Button.Background>
                        <ImageBrush Source="avares://Stellarity.Avalonia/Assets/Images/stellaris-logo.ico" />
                    </Button.Background>
                </Button>

                <Border Width="200" Height="200" CornerRadius="10">
                    <Border.Background>
                        <ImageBrush Source="avares://Stellarity.Avalonia/Assets/Images/stellaris-logo.ico" />
                    </Border.Background>
                </Border>
            </UniformGrid>
        </Border>
    </Design.PreviewWith>

    <Style Selector="templatedControls|ImageButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Template">
            <ControlTemplate>
                <ContentPresenter x:Name="PART_ContentPresenter"
                                  Margin="5"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  CornerRadius="{TemplateBinding CornerRadius}"
                                  Padding="{TemplateBinding Padding}"
                                  RecognizesAccessKey="True"
                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}">
                    <ContentPresenter.Background>
                        <ImageBrush
                            Source="{Binding RelativeSource={RelativeSource AncestorType=templatedControls:ImageButton}, Path=ImageSource}" />
                    </ContentPresenter.Background>
                </ContentPresenter>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="templatedControls|ImageButton">
        <Setter Property="BoxShadow" Value="0 0 10 Black" />
    </Style>
    
    <Style Selector="templatedControls|ImageButton:pointerover">
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    
    <Style Selector="templatedControls|ImageButton:pressed">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>
    
    <Style Selector="templatedControls|ImageButton:pressed">
        <Setter Property="BoxShadow" Value="0 0 Transparent" />
    </Style>
    
    <Style Selector="templatedControls|ImageButton:disabled">
        <Setter Property="Opacity" Value=".5" />
        <Setter Property="BoxShadow" Value="0 0 Transparent" />
    </Style>

</Styles>